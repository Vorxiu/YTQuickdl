SPOTDL="/data/data/com.termux/files/usr/bin/spotdl"

if [[ $1 == *"open.spotify.com"* ]]; then
    if [[ ! -d $download_dir ]]; then
        mkdir -p $download_dir
    fi
    cd $download_dir
    echo -e "Detected Spotify link \n Starting..."
  
  termux-notification -t "Starting Download Spotify"  --alert-once --icon "get_app" --id 1  
    $SPOTDL "$1" && termux-notification -t "Spotify download complete" --icon "done" --id 1 ||{ termux-toast -c red "Something went wrong"; echo "Press any key to exit...";read -n 1 -s;
termux-notification -t "Spotify download failed" --icon "close" --id 1

}

else
    ~/bin/YTQuickDL.sh "$1"
fi